<div class="spot-show-wrapper">

  <div class="card border-0">

    <div class="show-banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.6),rgba(0,0,0,0.6)), url(<%= @spot.thumbnail %>);">

      <div style="margin: auto;">

        <!-- Spot name -->

        <div class="show-banner-name">

          <div>
            <h1 ><%= @spot.name %></h1>
          </div>

          <div id="show-underline"></div>

        </div>

      </div>

    </div>

  </div>

</div>

<!-- really this is the create review page -->

<div class="modal-content">
  <div class="modal-header">
    <h5 class="modal-title" id="exampleModalLongTitle">Review <%= @spot.name %></h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>


  <div class="modal-body">

    <button type="button" class="btn btn-recommend" data-dismiss="modal">
      <i class="fas fa-star mr-1"></i>
      Recommend
    </button>


  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal">Save & Close</button>
  </div>
</div>



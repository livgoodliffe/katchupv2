<!-- Search bar -->

<%= form_tag(spots_path, method: :get) do %>

  <div class="search-bar">

      <i class="far fa-search search-icon"></i>

      <%= text_field_tag :query,
      params[:query],
      class: "search-text",
      placeholder: "Search for a spot...",
      id: "spots-search" %>


      <i id='search-exit' class="fal fa-times-circle exit hidden"></i>

  </div>
<% end %>
